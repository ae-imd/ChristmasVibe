{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build project",
            "command": "g++",
            "args": [
                "-std=c++20",
                "-g",
                "${workspaceFolder}/src/main.cpp",
                "${workspaceFolder}/src/christmas.cpp",
                "-I", "${workspaceFolder}/include",
                "-o", "${workspaceFolder}/main.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}